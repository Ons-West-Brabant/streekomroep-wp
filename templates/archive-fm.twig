{% extends "base.twig" %}

{% set showArchive = false %}
{% block content %}
    <div class="max-w-960 mx-auto px-4">
        <h1 class="font-bold text-center text-2xl pt-4">De programma's van</h1>
        <div class="flex justify-center font-bold text-4xl">
            <a href="{{ function('get_post_type_archive_link', 'tv') }}" class="px-2 text-gray-400 hover:underline">ZuidWest TV</a>
            <span class="px-2">ZuidWest FM</span>
        </div>

        <div class="prose text-center prose-lg mt-4 max-w-none">
            <p>Bekijk alle informatie over onze programma's en luister uitzendingen terug.</p>
        </div>

        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4 py-8">
            {% for post in posts %}
                {% if post.meta('fm_show_actief') %}
                    <a class="block relative" href="{{ post.link }}">
                        <div class="relative aspect-w-1 aspect-h-1 overflow-hidden rounded">
                            {% include 'partial/cover-duotone.twig' with {
                                image: post.thumbnail.src|resize(200, 200),
                                light: random(['FEDF20', '43E7FD', 'FD0077', 'EC44FD', '1DFEAF'])
                            } only %}
                            <h1 class="w-full h-full p-2 sm:p-4 absolute items-end justify-end text-right flex flex-col uppercase font-round font-black text-white text-2xl">{{ post.title }}</h1>
                        </div>
                        <h1 class="text-sm text-center mt-2">{{ post.title }}</h1>
                        <p class="text-center text-sm text-gray-500">
                            {% spaceless %}
                                {% for host in post.meta('fm_show_presentator') %}
                                    <span class="inline-block">{{ User(host) }}</span>
                                    {%- if not loop.last %}, {% endif %}
                                {% endfor %}
                            {% endspaceless %}
                        </p>
                    </a>
                {% else %}
                    {% set showArchive = true %}
                {% endif %}
            {% endfor %}
        </div>

        {% if showArchive %}
            <h1 class="font-bold text-3xl pt-4">Programma-archief</h1>
            <div class="prose prose-lg">
                <p>Deze programma's worden niet meer uitgezonden, maar je kunt ze nog wel terugluisteren.</p>
            </div>

            <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4 py-8">
                {% for post in posts %}
                    {% if not post.meta('fm_show_actief') %}
                        <a class="block relative" href="{{ post.link }}">
                            <div class="relative aspect-w-1 aspect-h-1 overflow-hidden rounded">
                                {% include 'partial/cover-duotone.twig' with {
                                    image: post.thumbnail.src|resize(200, 200),
                                    light: random(['FEDF20', '43E7FD', 'FD0077', 'EC44FD', '1DFEAF'])
                                } only %}
                                <h1 class="w-full h-full p-4 absolute items-end justify-end text-right flex uppercase font-round font-black text-white text-2xl">{{ post.title }}</h1>
                            </div>
                            <h1 class="text-sm text-center mt-2">{{ post.title }}</h1>
                            <p class="text-center text-sm text-gray-500">
                                {% spaceless %}
                                    {% for host in post.meta('fm_show_presentator') %}
                                        <span class="inline-block">{{ User(host) }}</span>
                                        {%- if not loop.last %}, {% endif %}
                                    {% endfor %}
                                {% endspaceless %}
                            </p>
                        </a>
                    {% endif %}
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}
