{% extends "base.twig" %}

{% block content %}
    <div class="max-w-960 mx-auto">
        <h1>De programma's van ZuidWest FM</h1>
        <p>Bekijk alle informatie over onze programma's en luister uitzendingen terug.</p>
        <div class="grid grid-cols-3 gap-8">
            {% for post in posts %}
                {% if post.fm_show_actief %}
                    <a class="block aspect-w-16 aspect-h-9 bg-blue-50 relative" href="{{ post.link }}">
                        <div>
                            <img class="w-full h-full object-cover" src="{{ post.thumbnail.src|resize(640, 360) }}"/>
                            <div class="absolute inset-0 top-auto p-4">
                                <h1 class="font-round uppercase font-black text-xl">{{ post.title }}</h1>
                                <ul>
                                    {% for host in post.meta('fm_show_presentator') %}
                                        <li>{{ User(host) }}</li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                    </a>
                {% endif %}
            {% endfor %}
        </div>

        <h1>Programma-archief</h1>
        <p>Deze programma's worden niet meer uitgezonden, maar je kunt ze nog wel terugluisteren.</p>
        <div class="grid grid-cols-3 gap-8">
            {% for post in posts %}
                {% if not post.fm_show_actief %}
                    <a class="block" href="{{ post.link }}">
                        <img src="{{ post.thumbnail.src }}"/>
                        <h1>{{ post.title }}</h1>
                        <ul>
                            {% for host in post.meta('fm_show_presentator') %}
                                <li>{{ User(host) }}</li>
                            {% endfor %}
                        </ul>
                    </a>
                {% endif %}
            {% endfor %}
        </div>
    </div>
{% endblock %}
