{% extends "base.twig" %}

{% block content %}
    <div class="w-full mx-auto max-w-960">
        <h1>{{ post.title }}</h1>

        {% for day in schedule.days %}
            <h2 class="font-bold text-2xl">{{ day.name }}</h2>
            <h2>Op TV</h2>
            <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4">
                {% for broadcast in day.television %}
                    <a class="block" href="{{ broadcast.show.link }}">
                        <div class="aspect-w-4 aspect-h-3 bg-blue-900 rounded overflow-hidden">
                            <img class="w-full h-full object-cover" src="{{ broadcast.show.thumbnail.src|resize(400, 300) }}"/>
                        </div>
                        <p class="text-center mt-2 font-bold text-sm">{{ broadcast.name }}</p>
                        <p class="text-center text-sm">{{ broadcast.times|join('&nbsp ') }}</p>
                    </a>
                {% endfor %}
            </div>
            <h2>Op de radio</h2>
            <table>
                {% for broadcast in day.radio %}
                    {% if broadcast.show %}
                        <tr>
                            <td rowspan="2" class="align-top">{{ broadcast.startTime|date('H:i') }}</td>
                            <td class="font-bold"><a href="{{ broadcast.show.link }}">{{ broadcast.show.title }}</a>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <ul>
                                    {% for host in broadcast.show.meta('fm_show_presentator') %}
                                        <li>{{ User(host) }}</li>
                                    {% endfor %}
                                </ul>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td class="align-top">{{ broadcast.startTime|date('H:i') }}</td>
                            <td class="font-bold">{{ broadcast.title }}</td>
                        </tr>
                    {% endif %}
                {% endfor %}
            </table>
        {% endfor %}
    </div>
{% endblock %}
