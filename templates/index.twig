{% extends "base.twig" %}

{% block content %}
    <div class="max-w-960 mx-auto">
        <h2 class="text-3xl font-bold">{{ title }}</h2>

        <div class="grid grid-cols-3 gap-8">
            {% for post in posts %}
                <a href="{{ post.link }}" class="block">
                    <div class="aspect-w-16 aspect-h-9 relative bg-gray-800">
                        <img class="absolute inset-0 object-cover" src="{{ post.thumbnail.src }}"/>
                    </div>
                    <span class="inline rounded-md px-2 py-0.5 text-xs tracking-wide uppercase font-black font-round bg-green-600 text-white">{{ post.region.title }}</span>
                    <h2 class="text-xl font-bold">{{ post.title }}</h2>
                </a>
            {% endfor %}
        </div>

        {% include 'partial/pagination.twig' with { pagination: posts.pagination({show_all: false, mid_size: 3, end_size: 2}) } %}
    </div>

{% endblock %}
