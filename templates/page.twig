{% extends "base.twig" %}

{% block content %}
    <div class="px-6 md:px-12 max-w-3xl mx-auto">
        <article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
            <section class="article-content">
                <h1 class="text-5xl font-black font-round">{{ post.title }}</h1>

                <div class="prose prose-md md:prose-lg max-w-none">
                    {{ post.content }}
                </div>
            </section>
        </article>
    </div>
{% endblock %}