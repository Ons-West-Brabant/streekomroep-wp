{% extends "base.twig" %}

{% block content %}
    <div class="max-w-960 mx-auto px-4">
        <div class="flex justify-center font-bold text-4xl">
            <span class="px-2">ZuidWest TV</span>
            <a href="{{ fm.link }}" class="px-2 text-gray-400 hover:underline">ZuidWest FM</a>
        </div>
    </div>

    <div class="w-full max-w-xl mx-auto px-4">
        {% for day in schedule.days %}
            <h2 class="font-bold text-2xl">{{ day.name }}</h2>
            {% for broadcast in day.television %}
                <a class="block my-4 flex flex-row" href="{{ broadcast.show.link }}">
                    <div class="w-1/2 sm:w-1/3 flex-none pr-2">
                        <div class="aspect-w-16 aspect-h-9 bg-blue-900 rounded overflow-hidden">
                            <img class="w-full h-full object-cover"
                                 src="{{ broadcast.show.thumbnail.src|resize(400, 300) }}"/>
                        </div>
                    </div>
                    <div>
                        <p class="font-bold text-sm">{{ broadcast.name }}</p>
                        <p class="text-sm">{{ broadcast.times|join('&nbsp ') }}</p>
                    </div>
                </a>
            {% endfor %}
        {% endfor %}
    </div>
{% endblock %}
