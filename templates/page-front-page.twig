{% extends "base.twig" %}

{% block content %}
    <div class="max-w-960 mx-auto">
        <div class="grid grid-stories gap-1">
            {% for post in topstories %}
                <a class="block bg-yellow-500 {{ loop.first? 'main' }} relative" href="{{ post.link }}">
                    <span class="block absolute left-0 right-0 bottom-0 p-4">
                        <h1 class="block font-black text-2xl">{{ post.title }}</h1>
                    </span>
                </a>
            {% endfor %}
        </div>
    </div>

    <div class="max-w-960 mx-auto grid grid-cols-3 gap-4">
        <div class="col-span-2">
            {% for block in options.blokken_voorpagina %}
                {% include ['blocks/' ~ block.acf_fc_layout ~ '.twig', 'blocks/block.twig'] with {block: block} only %}
            {% endfor %}
        </div>
        <div>
            {% for block in options.blokken_sidebar %}
                {% include ['blocks/' ~ block.acf_fc_layout ~ '.twig', 'blocks/block.twig'] with {block: block} only %}
            {% endfor %}
        </div>
    </div>
{% endblock %}
