<h2>{{ block.tekst_boven_artikelen }}</h2>
{% for post in block.posts %}
    <a class="block" href="{{ post.link }}">
        <img src="{{ post.thumbnail.src|resize(160) }}"/>
        <h2>{{ post.title }}</h2>
        <p><span class="inline rounded-md px-2 py-0.5 text-xs tracking-wide uppercase font-black font-round bg-green-600 text-white">Roosendaal</span>
        {{ post.preview }}</p>
    </a>
{% endfor %}
