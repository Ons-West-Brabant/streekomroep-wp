<div class="w-full mx-auto max-w-960 my-4">
    {% if block.tekst_boven_artikelen %}
        <h2 class="font-bold text-3xl pb-4">{{ block.tekst_boven_artikelen }}</h2>
    {% endif %}

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
        {% for post in block.posts %}
            {% include 'partial/post-tile.twig' with { post: post } %}
        {% endfor %}
    </div>
</div>
