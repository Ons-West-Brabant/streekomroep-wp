<div class="bg-gray-800 text-white">
    <div class="w-full mx-auto max-w-960 py-4">

        {% if block.tekst_boven_fragmenten %}
            <h2 class="font-bold text-3xl pb-4">{{ block.tekst_boven_fragmenten }}</h2>
        {% endif %}

        {% set post = block.posts[0] %}
        <a href="{{ post.link }}" class="block grid sm:grid-cols-2 gap-4">
            <div>
                <div class="aspect-w-16 aspect-h-9">
                    <img class="w-full" loading="lazy" src="{{ post.thumbnail.src|resize(472) }}"
                         srcset="{{ post.thumbnail.src|resize(994) }} 2x"/>
                </div>
            </div>

            <div>
                {% include 'partial/tag-region.twig' with { region: post.region } %}
                <h1 class="font-bold text-xl sm:text-3xl">{{ post.title }}</h1>
                <p class="prose text-white hidden sm:block">{{ post.preview.read_more(false) }}</p>
            </div>
        </a>

        <div class="grid grid-cols-4 gap-4">
            {% for post in block.posts[1:] %}
                <a class="block" href="{{ post.link }}">
                    <div class="aspect-w-16 aspect-h-9">
                        <img class="w-full" loading="lazy" src="{{ post.thumbnail.src|resize(228) }}"
                             srcset="{{ post.thumbnail.src|resize(456) }} 2x"/>
                    </div>
                    {% include 'partial/tag-region.twig' with { region: post.region } %}
                    <h1 class="text-xl font-semibold">{{ post.title }}</h1>
                </a>
            {% endfor %}
        </div>
    </div>
</div>
