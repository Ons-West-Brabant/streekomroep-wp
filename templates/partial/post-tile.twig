<a class="block flex sm:flex-col" href="{{ post.link }}">
    <div class="flex-none w-1/3 sm:w-auto">
        <div class="aspect-w-16 aspect-h-9">
            <img class="w-full" loading="lazy" src="{{ post.thumbnail.src|resize(160, 90) }}"
                 srcset="{{ post.thumbnail.src|resize(320, 180) }} 2x"/>
        </div>
    </div>
    <div class="flex-auto pl-2 pr-4 sm:px-0">
        <span class="inline rounded-full px-2 py-0.5 text-xs tracking-wide uppercase font-black font-round bg-green-600 text-white">{{ post.region.title }}</span>
        <span>{{ post.date }}</span>
        <h2 class="sm:text-xl font-semibold">{{ post.title }}</h2>
        <p>{{ post.preview.length(20).read_more(false) }}</p>
    </div>
</a>
