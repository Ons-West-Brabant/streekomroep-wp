{% extends "base.twig" %}

{% block content %}
    <div class="px-6 md:px-12 max-w-3xl mx-auto">
        <h1>{{ post.title }}</h1>

        <img src="{{ post.thumbnail.src }}"/>

        <h2>Presentatie</h2>
        <ul>
            {% for id in post.meta('tv_show_presentator') %}
                <li>{{ User(id) }}</li>
            {% endfor %}
        </ul>

        <div class="prose">
            {{ post.content }}
        </div>
    </div>

    <div class="bg-blue-500 text-white">
        <div class="max-w-960 mx-auto">
            <h2>Uitzending gemist</h2>
            <div class="grid grid-cols-3 gap-8">
                {% for video in videos %}
                    <a href="#">
                        <img src="{{ video.pictures.sizes[2].link }}"/>
                        <h3 class="font-bold text-2xl">{{ video.name }}</h3>
                    </a>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
