{% extends "base.twig" %}

{% block content %}
    <div class="px-6 md:px-12 max-w-3xl mx-auto">
        <h1>{{ post.title }}</h1>

        <img src="{{ post.thumbnail.src }}"/>

        <h2>Presentatie</h2>
        <ul>
            {% for id in post.meta('tv_show_presentator') %}
                <li>{{ User(id) }}</li>
            {% endfor %}
        </ul>

        <div class="prose">
            {{ post.content }}
        </div>
    </div>

    <div class="bg-gray-800 text-white">
        <div class="w-full mx-auto max-w-960 py-4">
            <h2 class="font-bold text-3xl pb-4">Uitzending gemist</h2>
            <div class="grid grid-cols-4 gap-4">
                {% for video in videos %}
                    <a href="?v={{ get_vimeo_id(video) }}">
                        <img src="{{ get_vimeo_image(video, 295).link }}"/>
                        <h3 class="font-bold mt-2">{{ video.name }}</h3>
                    </a>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
