{% extends "base.twig" %}

{% block content %}
    <div class="px-6 md:px-12 max-w-3xl mx-auto py-8">
        <ul class="text-sm">
            {% for entry in post.meta('fm_show_programmatie') %}
                <li>{{ entry|format_schedule }}</li>
            {% endfor %}
        </ul>
        <h1 class="font-black font-round text-4xl lg:text-5xl uppercase">{{ post.title }}</h1>
        <p class="text-sm mb-8">Met
            {% spaceless %}
                {% for host in post.meta('fm_show_presentator') %}
                    <span>{{ User(host) }}</span>
                    {%- if not loop.last %}, {% endif %}
                {% endfor %}
            {% endspaceless %}
        </p>

        <div class="prose prose-lg">
            {{ post.content }}
        </div>
    </div>
{% endblock %}
